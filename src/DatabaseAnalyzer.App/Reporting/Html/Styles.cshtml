        background-size: contain;
        background-repeat: no-repeat;
        cursor: pointer;
    }

    .float-right {
        float: right;
    }

    a,
    a:visited {
        color: var(--link-fg-color);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    .info-box {
        margin: 10px 0 10px 0;
        color: var(--info-box-fg-color);
    }

    .issue-type-warning {
        color: var(--issue-warning-fg-color);
    }

    .issue-type-formatting {
        color: var(--issue-formatting-fg-color);
    }

    .issue-type-information {
        color: var(--issue-information-fg-color);
    }

    .issue-type-error {
        color: var(--red);
    }

    .issue-type-missingindex {
        color: var(--issue-missingindex-fg-color);
    }

    .stats-has-no-issues {
        color: var(--green);
    }

    .stats-has-issues {
        color: var(--red);
    }

    .statistics-container > div {
        display: inline-block;
        vertical-align: top;
    }

    .statistics-container > div:nth-child(n+2) {
        margin-left: 10px;
    }

    .right-align-2nd-column > tbody > tr > td:nth-child(2) {
        text-align: right;
    }

    .right-align-3rd-column > tbody > tr > td:nth-child(3) {
        text-align: right;
    }

</style>
