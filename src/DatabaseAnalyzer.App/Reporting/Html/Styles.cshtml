<style>
    body {
        background-color: var(--background-color);
        color: var(--text-color);
        font-family: Verdana, Arial, sans-serif;

        margin: 0;
        padding: 5px;
    }

    html, body {
        font-size: 12px;
    }

    table, th, tr, td, th {
        font-size: inherit;
    }

    header {
        padding: 20px;
        text-align: center;
    }

    pre.code {
        display: inline-block;
        background-color: var(--code-bg-color);
        color: var(--code-fg-color);
        padding: 0px 5px 1px 5px;

        margin: -3px 0 -3px 0;
        font-size: 1.0em;
        border-radius: 3px;
        vertical-align: middle;
    }

    h1 {
        margin: 20px 0 5px 0;
    }

    table.data-table td,
    table.data-table th {
        margin: 0;
    }

    table.data-table {
        border-spacing: 0;
        border-radius: 4px;
    }

    table.data-table thead {
        background-color: var(--table-header-bg);
    }

    table.data-table thead th {
        color: var(--text-color);
        padding: 10px;
    }

    table.data-table tbody tr:nth-child(odd) {
        background-color: var(--table-row-bg);
    }

    table.data-table tbody tr:nth-child(even) {
        background-color: var(--table-row-alt-bg);
    }

    table.data-table > thead > tr > th {
        color: var(--text-color);
        border: solid 1px var(--table-border-color);
        padding: 10px 5px 10px 5px;
    }

    table.data-table > tbody > tr > td {
        color: var(--text-color);
        border: solid 1px var(--table-border-color);
        padding: 6px 5px 6px 5px;
    }

    table.data-table tbody tr:hover {
        background-color: var(--table-row-hover-bg);
    }

    table.data-table > thead > tr > th,
    table.data-table > tbody > tr > td:nth-child(1),
    table.data-table > tbody > tr > td:nth-child(2),
    table.data-table > tbody > tr > td:nth-child(3),
    table.data-table > tbody > tr > td:nth-child(4) {
        white-space: nowrap;
    }

    table.data-table > thead > tr > th {
        cursor: pointer;
    }

    table.sticky-header-row {
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
    }

    table.sticky-header-row > thead > tr > th {
        position: sticky;
        top: 0;
        z-index: 1;
        background-color: var(--table-header-bg);
    }

    .issue-table > tbody > tr > td:nth-child(5) {
        white-space: nowrap;
    }

