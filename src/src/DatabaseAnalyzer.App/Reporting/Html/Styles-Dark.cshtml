<style>

    :root {
        --green: #20c020;
        --red: #c02020;
        --background-color: #121212;
        --text-color: #c0c0c0;
        --table-header-bg: #1e1e1e;
        --table-row-bg: #202020;
        --table-row-alt-bg: #1c1c1c;
        --table-border-color: var(--background-color);
        --table-row-hover-bg: #2a2a2a;
        --issue-missingindex-bg-color: #c020c0;
        --issue-information-bg-color: #0098ff;
        --issue-formatting-bg-color: #c08060;
        --issue-warning-bg-color: #ff9800;
        --issue-error-bg-color: --red;
        --link-bg-color: #6C9AD1;
        --code-bg-color: #444;
    }

    body {
        background-color: var(--background-color);
        color: var(--text-color);
        font-family: Verdana, Arial, sans-serif;
        margin: 0;
        padding: 5px;
    }

    header {
        padding: 20px;
        text-align: center;
    }

    pre.code {
        display: inline-block;
        background-color: var(--code-bg-color);
        padding: 3px 5px 3px 5px;

        margin: -3px 0 -3px 0;
        font-size: 1.2em;
        border-radius: 3px;
        color: #eee;
    }

    h1 {
        margin: 20px 0 5px 0;
    }

    table.data-table td,
    table.data-table th {
        border-collapse: collapse;
        margin: 0;
    }

    table.data-table {
        border-collapse: collapse;
        border-spacing: 0;
        border-radius: 4px;

        overflow: hidden; /* Ensures inner elements don't overflow the rounded corners */
    }

    table.data-table thead {
        background-color: var(--table-header-bg);
    }

    table.data-table thead th {
        color: var(--text-color);
        padding: 10px;
    }

    table.data-table tbody tr:nth-child(odd) {
        background-color: var(--table-row-bg);
    }

    table.data-table tbody tr:nth-child(even) {
        background-color: var(--table-row-alt-bg);
    }

    table.data-table tbody td {
        color: var(--text-color);
        padding: 10px;
    }

    table.data-table, th, td {
        border: solid 1px var(--table-border-color);
    }

    table.data-table tbody tr:hover {
        background-color: var(--table-row-hover-bg);
    }

    table.data-table > thead > tr > th,
    table.data-table > tbody > tr > td:nth-child(1),
    table.data-table > tbody > tr > td:nth-child(2),
    table.data-table > tbody > tr > td:nth-child(3),
    table.data-table > tbody > tr > td:nth-child(4) {
        white-space: nowrap;
    }

    table.data-table > thead > tr > th {
        cursor: pointer;
    }

    a,
    a:visited {
        color: var(--link-bg-color);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    .info-box {
        margin: 10px 0 10px 0;
        color: #aaa;
    }

    .issue-type-warning {
        color: var(--issue-warning-bg-color);
    }

    .issue-type-formatting {
        color: var(--issue-formatting-bg-color);
    }

    .issue-type-information {
        color: var(--issue-information-bg-color);
    }

    .issue-type-error {
        color: var(--red);
    }

    .issue-type-missingindex {
        color: var(--issue-missingindex-bg-color);
    }

    .stats-has-no-issues {
        color: var(--green);
    }

    .stats-has-issues {
        color: var(--red);
    }

</style>
